<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helplink">

    <!-- Internet permission for Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="HelpLink"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelpLink">

        <!-- HOME SCREEN -->
        <activity
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- REQUEST HELP SCREEN -->
        <activity
            android:name=".RequestHelpActivity"
            android:exported="false" />

        <!-- VIEW REQUESTS (OFFER HELP) -->
        <activity
            android:name=".ViewRequestsActivity"
            android:exported="false" />

        <!-- MY ACCEPTED JOBS -->
        <activity
            android:name=".MyJobsActivity"
            android:exported="false" />

        <!-- SIGN UP SCREEN -->
        <activity
            android:name=".SignupActivity"
            android:exported="false" />

        <!-- LOGIN SCREEN (APP STARTS HERE) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
